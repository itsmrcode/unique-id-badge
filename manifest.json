{
  "name": "Unique ID Label Pro",
  "description": "Adds a customizable label with a unique ID to each Trello card on your board.",
  "version": "1.0.0",
  "homepage_url": "https://your-website.com/unique-id-label-pro/",
  "background": {
    "scripts": [
      "./script.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "storage"
  ],
  "icons": {
    "16": "./icon-16.png",
    "32": "./icon-32.png",
    "64": "./icon-64.png",
    "128": "./icon-128.png"
  },
  "content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; object-src 'none'",
  "content_scripts": [
    {
      "matches": [
        "https://trello.com/*"
      ],
      "js": [
        "./script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "oauth": {
    "key": "YOUR_APP_KEY",
    "scope": "read,write",
    "expiration": "never"
  },
  "config": {
    "admin": {
      "scope": "board",
      "callback": "https://your-website.com/unique-id-label-pro/settings.html",
      "name": {
        "en-US": "Unique ID Label Pro Settings"
      }
    }
  }
}
